<section id="dashboard">
    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            {{>_navEditPages}}
            <div class="content p-1">
                <div class="list-group-item">
                    <div class="d-flex">
                        <div class="mr-auto p-2">
                            <h2 class="display-4 titulo">Editar History Pagina Home</h2>
                        </div>
                        <div class="p-2">
                            <span class="d-none d-md-block">
                                <a href="/visAdmin/vis-history" class="btn btn-outline-primary btn-sm">Visualizar</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="/visAdmin/vis-history">Visualizar</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <form action="" method="POST">
                        <input name="id" type="hidden" value="{{slideshow.dataValues.id}}">
                        <h4>Carregamento das Imagens</h2>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label><span class="text-danger">* </span>Imagem já carregadas</label>
                                    <div class="custom-file">
                                        <select name="" id="" class="form form-control">
                                            <option value="{{slideshow.dataValues.img1}}">{{slideshow.dataValues.img1}}
                                            </option>
                                            <option value="{{slideshow.dataValues.img2}}">{{slideshow.dataValues.img2}}
                                            </option>
                                            <option value="{{slideshow.dataValues.img3}}">{{slideshow.dataValues.img3}}
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <label><span class="text-danger">* </span>Nome da primeira Imagem e sua
                                        extensão</label>
                                    <input name="title" type="text" class="form-control" id="title"
                                        placeholder="Digite o nome do arquivo e sua extensão ex: img.png"
                                        value="{{slideshow.dataValues.title1_1}}" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label><span class="text-danger">* </span>Carregue a Imagem</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="customFile" border="1">
                                        <label class="custom-file-label" for="customFile">Carregar Arquivo</label>
                                    </div>
                                </div>
                                <button class="btn btn-info">Enviar</button>
                            </div>
                    </form>
                    <hr>
                    <!-- ============================ Segundo Form ========================================= -->
                    <h4 class="mt-5">Formulário para Editar História da Empresa</h4>
                    <form action="/addbd/slideshow" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>Titulo(parte-um)</label>
                                <input name="title1_1" type="text" class="form-control" id="title1_1"
                                    placeholder="Digite o nome da navegação" value="{{slideshow.dataValues.title1_1}}"
                                    required>
                            </div>
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>Titulo(parte-dois)</label>
                                <input name="title1_2" type="text" class="form-control" id="title1_2"
                                    placeholder="Digite o nome da navegação" value="{{slideshow.dataValues.title1_2}}"
                                    required>
                            </div>
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>Subtitulo</label>
                                <input name="title1_1" type="text" class="form-control" id="title1_1"
                                    placeholder="Digite o nome da navegação" value="{{slideshow.dataValues.title1_1}}"
                                    required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label><span class="text-danger">* </span>Primeiro Paragrafo</label>
                                <textarea name="" id="" cols="30" rows="10" class="form-control"
                                    placeholder="Digite seu primeiro paragrafo"></textarea>
                            </div>
                            <div class="form-group col-md-6">
                                <label><span class="text-danger">* </span>Segundo Paragrafo</label>
                                <textarea name="" id="" cols="30" rows="10" class="form-control"
                                    placeholder="Digite seu Segundo paragrafo"></textarea>
                            </div>
                        </div>
                        <h4 class="mt-5">Formulário para Editar Botões</h4>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label><span class="text-danger">* </span>Titulo do Botão</label>
                                <input name="title1_1" type="text" class="form-control" id="title1_1"
                                    placeholder="Digite o titulo do botão" value="{{slideshow.dataValues.title1_1}}"
                                    required>
                            </div>
                            <div class="form-group col-md-6">
                                <label><span class="text-danger">* </span>URL do Botão</label>
                                <input name="title1_1" type="text" class="form-control" id="title1_1"
                                    placeholder="Digite a URL do botão" value="{{slideshow.dataValues.title1_1}}"
                                    required>
                            </div>
                        </div>
                        <h4 class=" mt-5">Visão da Empresa</h4>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label><span class="text-danger">* </span>Frase</label>
                                <input name="title1_1" type="text" class="form-control" id="title1_1"
                                    placeholder="Digite a Frase" value="{{slideshow.dataValues.title1_1}}"
                                    required>
                            </div>
                            <div class="form-group col-md-6">
                                <label><span class="text-danger">* </span>Autor</label>
                                <input name="title1_1" type="text" class="form-control" id="title1_1"
                                    placeholder="Digite a Autor" value="{{slideshow.dataValues.title1_1}}"
                                    required>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>