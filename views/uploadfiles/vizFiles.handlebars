<section id="dashboard">
    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            {{>_navEditPages}}
            <div class="content p-1">
                <div class="list-group-item">
                    <div class="d-flex">
                        <div class="mr-auto p-2">
                            <h2 class="display-4 titulo">Enviar imagens</h2>
                        </div>
                        <div class="p-2">
                            <span class="d-none d-md-block">
                                <a href="/visAdmin/vis-footer" class="btn btn-outline-primary btn-sm">Enviar Imagens</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="/visAdmin/vis-footer">Enviar Imagens</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>

                    <h4>Carregamento das Imagens</h4>
                    <form action="/uploadfiles/files" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label><span class="text-danger">* </span>Imagem já carregadas</label>
                                <div class="custom-file">
                                    <select name="file" id="file" class="form-control">
                                        {{#each paths}}
                                        <option value="{{this}}">{{this}} </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-info">Carregar</button>
                    </form>
                    <div class="row">
                        <div class="form-group ml-5 col-6">
                            {{#each paths}}
                            <p class="mt-5">{{this}}</p>
                            <img src="/images/{{this}}" class="img-fluid" alt="imgs">
                            {{/each}}
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</section>