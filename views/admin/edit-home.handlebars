<section id="dashboard">
    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            {{>_navEditPages}}
            <div class="content p-1">
                <div class="list-group-item">
                    <div class="d-flex">
                        <div class="mr-auto p-2">
                            <h2 class="display-4 titulo">Editar Navegação</h2>
                        </div>
                        <div class="p-2">
                            <span class="d-none d-md-block">
                                <a href="/sobre/vis-sobre" class="btn btn-outline-primary btn-sm">Visualizar</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="/sobre/vis-sobre">Visualizar</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <form action="/add_bd/contato" method="POST">
                        <input name="_id" type="hidden" value="{{contato._id}}">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label><span class="text-danger">* </span>Nome da primeira Imagem e sua extensão</label>
                                <input name="title" type="text" class="form-control" id="title"
                                    placeholder="Digite o nome do arquivo e sua extensão ex: img.png"
                                    value="{{contato.title}}" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label><span class="text-danger">* </span>Carregue a Imagem</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="customFile" border="1">
                                    <label class="custom-file-label" for="customFile">Carregar Arquivo</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>Titulo da primeira Imagem parte-um</label>
                                <input name="iconUm" type="text" class="form-control" id="iconUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.label_one}}" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>2ºNegação</label>
                                <input name="tituloUm" type="text" class="form-control" id="tituloUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.placeholder_one}}" required>
                            </div>
                             <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>3ºNegação</label>
                                <input name="tituloUm" type="text" class="form-control" id="tituloUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.placeholder_one}}" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>4ºNegação</label>
                                <input name="iconUm" type="text" class="form-control" id="iconUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.label_one}}" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>5ºNegação</label>
                                <input name="tituloUm" type="text" class="form-control" id="tituloUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.placeholder_one}}" required>
                            </div>
                             <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>6ºNegação</label>
                                <input name="tituloUm" type="text" class="form-control" id="tituloUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.placeholder_one}}" required>
                            </div>
                        </div>
                        <div class="form-row mt-4">
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>Link da 1ºNegação</label>
                                <input name="iconUm" type="text" class="form-control" id="iconUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.label_one}}" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>Link da 2ºNegação</label>
                                <input name="tituloUm" type="text" class="form-control" id="tituloUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.placeholder_one}}" required>
                            </div>
                             <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>Link da 3ºNegação</label>
                                <input name="tituloUm" type="text" class="form-control" id="tituloUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.placeholder_one}}" required>
                            </div>
                        </div>
                        <div class="form-row mt-4">
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>Link da 4ºNegação</label>
                                <input name="iconUm" type="text" class="form-control" id="iconUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.label_one}}" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>Link da 5ºNegação</label>
                                <input name="tituloUm" type="text" class="form-control" id="tituloUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.placeholder_one}}" required>
                            </div>
                             <div class="form-group col-md-4">
                                <label><span class="text-danger">* </span>Link da 6ºNegação</label>
                                <input name="tituloUm" type="text" class="form-control" id="tituloUm"
                                    placeholder="Digite o nome da navegação" value="{{contato.placeholder_one}}" required>
                            </div>
                        </div>
                        <p class="mt-4">
                            <span class="text-danger">* </span>Todos os campos são obrigatórios
                        </p>
                        <button type="submit" class="btn btn-warning">Salvar</button>
                    </form>
                </div>
            </div>

        </div>
    </div>

</section>