<div class="card">
    <div class="container mt-5" background="blue">

        <div class="container" onclick="abrirMenuBebidas()">
            <div class="card">
                <div class="card-body" style="max-width: 480px;" id="titleModal">
                    <h2 class="text-center">{{bebidas.dataValues.title}}</h2>
                    <p class="mt-2">{{bebidas.dataValues.desc}}</p>
                </div>
            </div>
        </div>

{{#each bebidas}}
        <div id="modalMenu">
            <div class="card mb-3 mt-5" style="max-width: 520px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="/img/menu-thumb-21.jpg" class="card-img mt-1 ml-1" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <form action="/menu/add" method="post">
                                <input type="hidden" name="title" value="{{dataValues.name}}">
                                <input type="hidden" name="desc" value="{{dataValues.desc}}">
                                <input type="hidden" name="valor" value="{{dataValues.valorVenda}}">
                                <h5 class="card-title text-center" id="titleModfy">{{dataValues.name}}</h5>
                                <p class="card-text text-center">{{dataValues.desc}}</p>
                                <p class="card-text mt-2 text-center"><small class="text-muted">R$
                                        {{dataValues.valorVenda}}</small>
                                </p>
                                <button class="btn btn-danger mt-4 col-05"
                                    style="max-height: 40px; font-size: 10px; margin-left: 30%">Comprar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
{{/each}}

            

    </div>
</div>