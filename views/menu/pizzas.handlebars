
<div class="card">
    <div class="container mt-5" background="blue">
        <!-- ==========================================================================================================================================================
        
                                                                    BURGER
        =============================================================================================================================================================== -->

        <div class="container" onclick="abrirMenuBebidas()">
            <div class="card">
                <div class="card-body" style="max-width: 480px;" id="titleModal">
                    <h2 class="text-center">{{TemplatePizza.dataValues.title}}</h2>
                    <p class="mt-2">{{TemplatePizza.dataValues.desc}}</p>
                </div>
            </div>
        </div>

{{#each pizzas}}
        <div class="card mt-3" style="max-width: 520px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="/img/img_2.jpg" class="card-img mt-4 ml-1" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{dataValues.name}}</h5>
                        <p class="card-text">{{dataValues.desc}}</p>
                        <p class="card-text mt-2"><small class="text-muted">R$ {{dataValues.valorVenda}}</small>
                        </p>
                        <button class="btn btn-danger mt-4 col-05"
                            style="max-height: 40px; font-size: 10px; margin-left: 30%">Comprar</button>
                    </div>
                </div>
            </div>
        </div>
{{/each}}
        
    </div>
</div>